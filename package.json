{
  "name": "bug_hunt",
  "private": true,
  "scripts": {
    "dev": "bun packages/scripts/src/dev.ts",
    "serve": "bun packages/scripts/src/serve.ts",
    "start": "turbo run start",
    "setup": "bun packages/scripts/src/setup.ts",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "node_modules/@biomejs/biome/bin/biome format --write .",
    "format:check": "node_modules/@biomejs/biome/bin/biome format .",
    "lint:biome": "node_modules/@biomejs/biome/bin/biome lint .",
    "typecheck": "turbo run check-types",
    "typecheck:staged": "turbo run check-types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/lodash": "^4.17.20",
    "@types/prompts": "^2.4.9",
    "@typescript/native-preview": "latest",
    "autoprefixer": "^10.4.21",
    "consola": "^3.4.2",
    "husky": "^9.1.7",
    "lint-staged": "latest",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prompts": "^2.4.2",
    "tailwindcss": "^4.1.11",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.2",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "clsx": "^2.1.1",
      "styled-components": "^6.1.19",
      "tailwind-merge": "^3.3.1",
      "tailwindcss": "^4.1.11",
      "consola": "^3.4.2",
      "prompts": "^2.4.2",
      "typescript": "^5.8.3",
      "decimal.js": "^10.6.0"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next/font": "^14.2.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@vitejs/plugin-react": "^4.7.0",
    "decimal.js": "^10.6.0",
    "es-toolkit": "^1.39.10",
    "glob": "^11.0.3",
    "lucide-react": "^0.525.0",
    "radix-ui": "^1.4.2",
    "react-hook-form": "^7.62.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "biome check --write",
    "*.{css,md,json}": "prettier --write",
    "*.{ts,tsx}": "node scripts/typecheck-staged.js"
  }
}
