  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "node_modules/@biomejs/biome/bin/biome format --write .",
    "format:check": "node_modules/@biomejs/biome/bin/biome format .",
