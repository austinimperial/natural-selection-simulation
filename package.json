    "catalog": {
      "clsx": "^2.1.1",
      "styled-components": "^6.1.19",
      "tailwind-merge": "^3.3.1",
      "tailwindcss": "^4.1.11"
    }
  },
  "dependencies": {
    "@next/font": "^14.2.15",
